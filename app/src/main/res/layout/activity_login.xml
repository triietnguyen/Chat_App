<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.MainActivity">
    <data>
        <variable
                name="LoginViewModel"
                type="com.example.demomvvm.viewModel.LoginViewModel"/>
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chatapp_background"
                android:contentDescription="@drawable/chatapp_background"
                android:scaleType="centerCrop">
        </ImageView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent">

            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/chatapp_logo"
                    android:contentDescription="@drawable/chatapp_logo"
                    android:scaleType="centerCrop"
                    android:paddingStart="80dp">
            </ImageView>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="86dp"
                    android:layout_weight="20"
                    android:text="Chat App"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:textSize="35sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/transparent">
        </LinearLayout>
    </RelativeLayout>
</layout>