<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.MainActivity">

    <data>

        <variable
            name="LoginViewModel"
            type="com.example.demomvvm.viewModel.LoginViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chatapp_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/chatapp_logo"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Chat App"
                    android:textColor="@android:color/white"
                    android:textSize="45sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="80dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbtnborder"
                    android:paddingHorizontal="50dp"
                    android:text="Login"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:backgroundTint="#C8C6C6" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbtnborder"
                    android:paddingHorizontal="35dp"
                    android:text="Sign up"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    android:layout_marginBottom="20dp"
                    app:backgroundTint = "#AAB8C2"
                    android:hint="Phone number"
                    android:textSize="20dp"
                    android:textColorHint="@color/white"></EditText>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    app:backgroundTint = "#AAB8C2"
                    android:hint="Password"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/white"></EditText>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonborder"
                    app:backgroundTint = "#AAB8C2"
                    android:hint="Confirm Password"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="@color/white"></EditText>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbtnborder"
                app:backgroundTint = "@null"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="20dp"
                android:text="Sign Up"
                android:textSize="25dp">
            </Button>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Already have an account?"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Login now!"
                    android:background="@drawable/underline"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>